<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.star_wars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.star_wars.presentation.StarWarsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Star_wars">
        <activity
            android:name="com.example.star_wars.presentation.characterDisplay.CharacterActivity"
            android:label="@string/title_activity_character"
            android:theme="@style/Theme.Star_wars.NoActionBar"></activity>
        <activity
            android:name="com.example.star_wars.presentation.characterDisplay.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Star_wars.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>